{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "order/properties-alphabetical-order": true,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "custom-variant",
          "theme",
          "variant"
        ]
      }
    ],
    "selector-class-pattern": [
      "^[a-z][a-zA-Z0-9]*(__[a-z][a-zA-Z0-9]*)?(_[a-z][a-zA-Z0-9]*)*$",
      {
        "message": "Expected class selector to be in BEM format"
      }
    ]
  },
  "ignoreFiles": [
    "dist/**/*",
    "node_modules/**/*"
  ]
}

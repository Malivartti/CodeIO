{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FastAPI Project backend: Python Debugger",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host", "127.0.0.1",
                "--port", "8000"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "jinja": true,
            "envFile": "${workspaceFolder}/../.env"
        }
    ]
}
